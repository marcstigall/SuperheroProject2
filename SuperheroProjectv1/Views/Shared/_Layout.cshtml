        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav"> @Html.ActionLink("Superhero Registry", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                <li class="nav"> @Html.ActionLink("Superheros", "Index", "UserModels", new { area = "" }, new { @class = "navbar-brand" })</li>
            </ul>
        </div>
        </nav>
